{% extends 'base.html.twig' %}

{% block title %}Classe index{% endblock %}

{% block body %}
    <h1>Classe index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Libelle</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for classe in classes %}
            <tr>
                <td>{{ classe.id }}</td>
                <td>{{ classe.libelle }}</td>
                <td style="display:flex;flex-wrap:nowrap;justify-content:space-around;">
                  <a href="{{ path('classe_show', {'id': classe.id}) }}" class="btn-floating btn-small waves-effect waves-light green"><i class="material-icons">visibility</i></a>
                  <a href="{{ path('classe_edit', {'id': classe.id}) }}" class="btn-floating btn-small waves-effect waves-light blue"><i class="material-icons">edit</i></a>
                                                    {{ include('classe/_delete_form.html.twig') }}

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Pas de resultats</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

<div class="fixed-action-btn">
  <a class="btn-floating btn-large yellow" href="{{ path('classe_new') }}">
    <i class="large material-icons">add</i>
  </a>
 
</div>{% endblock %}
